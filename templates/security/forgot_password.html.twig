{% extends 'base.html.twig' %}

{% block title %}
	SnowTricks | Mot de passe oublié
{% endblock %}

{% block body %}
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="text-center mb-5">
				<h1 class="fw-bolder">Mot de passe oublié</h1>
			</div>
			<div class="card rounded-3 py-5 px-4 px-md-5 mb-5">
				<div class="card-body">
					<div class="row gx-5 justify-content-center">
						<div class="col-10">
							{{ form_start(forgotPasswordForm) }}
							<div class="form-floating mb-3">
								{{ form_widget(forgotPasswordForm.username) }}
								{{ form_label(forgotPasswordForm.username) }}
								{{ form_errors(forgotPasswordForm.username) }}
							</div>
							<div class="d-grid">
								<button class="btn btn-primary btn-lg" id="submitButton" type="submit">Recevoir un mail</button>
							</div>
							{{ form_end(forgotPasswordForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
