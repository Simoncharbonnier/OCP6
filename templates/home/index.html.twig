{% extends 'base.html.twig' %}

{% block title %}
	SnowTricks | Accueil
{% endblock %}

{% block banner %}
	<style>
		.banner {
			background-image: url("/assets/img/snowtricks_banner.jpg");
		}
	</style>

	<div class="banner">
		<div class="container h-100">
			<div class="row align-items-center justify-content-center h-100">
				<div class="col-md-10 text-center">
					<h1 class="display-5 fw-bolder text-white">SnowTricks : le site communautaire</h1>
				</div>
			</div>
		</div>
		<div class="icon down">
			<img src="/assets/img/icons/down.svg" alt="down">
		</div>
	</div>
{% endblock %}

{% block body %}
	<div class="row">
		{% for trick in tricks %}
			<div class="col-5ths mb-5">
				<div class="card h-100 shadow border-0">
					<img class="card-img-top" src="/assets/img/snowtricks_banner.jpg" alt="Figure image"/>
					<div class="card-body d-flex align-items-center justify-content-between p-4">
						<a href="{{ path('app_trick', { 'slug': trick.slug }) }}">
							<h5 class="card-title mb-0">{{ trick.name }}</h5>
						</a>
						{% if app.user is same as trick.user %}
							<div class="icons d-flex">
								<a class="icon text-decoration-none" href="{{ path('app_trick_edit', { 'slug': trick.slug }) }}">
									<img src="/assets/img/icons/edit.svg" alt="edit">
								</a>
								<div class="icon text-decoration-none" data-bs-toggle="modal" data-bs-target="#modal-delete-trick">
									<img src="/assets/img/icons/delete.svg" alt="delete">
								</div>
							</div>
							<div class="modal fade" id="modal-delete-trick" tabindex="-1" aria-labelledby="modal-delete-trick-label" aria-hidden="true">
								<div class="modal-dialog">
									<div class="modal-content">
										<div class="modal-header">
											<h5 class="modal-title" id="modal-delete-trick-label">Suppression</h5>
											<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
										</div>
										<div class="modal-body text-center">
											<p>ÃŠtes-vous certain de vouloir supprimer cette figure ?</p>
											<span>{{ trick.name }}</span>
										</div>
										<div class="modal-footer">
											<p class="btn btn-secondary" data-bs-dismiss="modal">Annuler</p>
											<a class="btn btn-danger text-decoration-none" href="{{ path('app_trick_delete', { 'slug': trick.slug }) }}">
												Supprimer
											</a>
										</div>
									</div>
								</div>
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="row">
		<div class="col-md-12 d-flex justify-content-center">
			{{ knp_pagination_render(tricks) }}
		</div>
	</div>
{% endblock %}
