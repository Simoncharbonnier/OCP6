{% extends 'base.html.twig' %}

{% block title %}
	SnowTricks | Inscription
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}

	<div class="row justify-content-center">
		<div class="col-lg-6 col-10">
			<div class="text-center mb-5">
				<h1 class="fw-bolder">Inscription</h1>
			</div>
			<div class="card rounded-3 py-5 px-4 px-md-5 mb-5">
				<div class="card-body">
					<div class="row gx-5 justify-content-center">
						<div class="col-lg-10 col-12">
							{{ form_start(registrationForm) }}
							<div class="form-floating mb-3">
								{{ form_widget(registrationForm.username) }}
								{{ form_label(registrationForm.username) }}
								{{ form_errors(registrationForm.username) }}
							</div>
							<div class="form-floating mb-3">
								{{ form_widget(registrationForm.mail) }}
								{{ form_label(registrationForm.mail) }}
								{{ form_errors(registrationForm.mail) }}
							</div>
							<div class="form-floating mb-3">
								{{ form_widget(registrationForm.plainPassword) }}
								{{ form_label(registrationForm.plainPassword) }}
								{{ form_errors(registrationForm.plainPassword) }}
							</div>
							<div class="d-grid">
								<button class="btn btn-primary btn-lg" id="submitButton" type="submit">Cr√©er mon compte</button>
							</div>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
